<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManhinhChaomung">

    <TextView
        android:id="@+id/txtTieuDe2"
        android:layout_width="333dp"
        android:layout_height="47dp"
        android:background="#ffc0cb"
        android:paddingBottom="-5dp"
        android:text="64_TTMMT"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtMain2"
        android:layout_width="186dp"
        android:layout_height="56dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="137dp"
        android:layout_marginEnd="113dp"
        android:text="Màn hình chính"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTieuDe2" />

    <TextView
        android:id="@+id/txtChaomung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="Chào mừng "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMain2" />
</androidx.constraintlayout.widget.ConstraintLayout>