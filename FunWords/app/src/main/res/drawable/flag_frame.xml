<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Nền trắng trong -->
    <solid android:color="#FFFFFF" />

    <!-- Viền vàng -->
    <stroke
        android:width="4dp"
        android:color="#FFD700" /> <!-- Vàng kim -->

    <!-- Bo góc mềm -->
    <corners android:radius="12dp" />

    <!-- Bóng nhẹ -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="6dp" />

    <size
        android:width="150dp"
        android:height="100dp" />
</shape>
